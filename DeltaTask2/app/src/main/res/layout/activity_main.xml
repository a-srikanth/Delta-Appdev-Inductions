<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.deltatask2.MainActivity">

    <ScrollView
        android:id="@+id/command_scroll"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:background="#CCCCCC">
        <TextView
            android:id="@+id/textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/legend"
            android:textSize="18sp"
            android:textColor="#000000"
            android:visibility="visible" />
    </ScrollView>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_above="@id/command_scroll"
        android:layout_centerHorizontal="true"
        android:text="Command"
        android:onClick="voiceInput"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/hexagon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleX="1"
        android:scaleY="1"/>
</RelativeLayout>
